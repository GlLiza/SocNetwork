@model network.Views.ViewModels.OpenAlbumViewModel


<div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
</div>




<nav class="navbar navbar-inverse"  role="navigation">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-sidebar-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-sidebar-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><a href="@Url.Action("Index", "ImgAlbum")"><span style="font-size: 16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-arrow-left"></span></a></li>
                <li id="Mod"><a href=#>Delete album<span style="font-size: 16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-trash"></span></a></li>
                <li id="opMod"><a href=#>Edit album<span style="font-size: 16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-pencil"></span></a></li>
                <li id="openModal"><a href=#>Add photo<span style="font-size: 16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-plus"></span></a></li>
            </ul>
        </div>
    </div>
</nav>

   
    
    <div class="jumbotron container-fluid" >
    <div class="page" align="center">
        @Html.DisplayFor(model => model.NameAlb)
    </div>


    <hr />
    @if (Model.Photos.Count > 0)
    {
        foreach (var image in Model.Photos)
            
    {

        <div class="col-md-9 gallery">

            <img id="user_img" class="img-circle image gallery-img"
                 src="data:image/png;base64, @Convert.ToBase64String(image.Data)" />
        </div>
        }

    }

    </div>







<div id="addModal" class="modal fade" data-url='@Url.Action("AddPhoto", "ImgAlbum",new {id=Model.Id},null)'>
    <div id="addContainer">
    </div>
</div>


<div id="editModal" class="modal fade" data-url='@Url.Action("Edit","ImgAlbum",new {id=Model.Id},null)'>
    <div id="editContainer">
    </div>
</div>

<div id="delModal" class="modal fade" data-url='@Url.Action("Delete","ImgAlbum",new {id=Model.Id},null)'>
    <div id="delContainer">
    </div>
</div>



@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('#openModal').click(function () {
                var url = $('#addModal').data('url');

                $.get(url,
                    function (data) {
                        $('#addContainer').html(data);

                        $('#addModal').modal('show');
                    });
            });
        });
    </script>
    
    
    <script type="text/javascript">
        $(function () {
            $('#opMod').click(function () {
                var url = $('#editModal').data('url');

                $.get(url,
                    function (data) {
                        $('#editContainer').html(data);

                        $('#editModal').modal('show');
                    });
            });
        });
    </script>
    
<script type="text/javascript">
            $(function () {
                $('#Mod').click(function () {
                    var url = $('#delModal').data('url');

                    $.get(url,
                        function (data) {
                            $('#delContainer').html(data);

                            $('#delModal').modal('show');
                        });
                });
            });
</script>

}





