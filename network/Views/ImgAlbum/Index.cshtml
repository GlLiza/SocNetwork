@model network.Views.ViewModels.ImgViewModel

    

<div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
</div>

<nav class="navbar navbar-inverse" role="navigation">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-sidebar-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>


        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-sidebar-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="active"><a href="@Url.Action("Create","ImgAlbum",FormMethod.Get,null)">Add new album<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-plus"></span></a></li>
            </ul>
        </div>
    </div>
</nav>




<div class="jumbotron container-fluid">
    <div class="row">
        @if (Model.Albums.Count() > 0)
        {
              foreach (var item in Model.Albums)
        {

                    <div class="btn-group alb">
                        <button class="btn"><a href="@Url.Action("OpenAlbum", "ImgAlbum", new {id = item.Id})">@Html.DisplayFor(modelItem => item.Name)</a></button>

                        <button class="btn dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                        </button>


                        <ul class="dropdown-menu">
                            <li></li>
                            <li>@Html.ActionLink("Open album", "OpenAlbum", new { id = item.Id })</li>
                            <li >@Html.ActionLink("Delete album", "Delete", new { id = item.Id })</li>
                            <li>@Html.ActionLink("Change albums name", "Edit", new { id = item.Id })</li>
                            <li class="divider"></li>
                        </ul>
                    </div>
        }
    }    
        <div class="row">
            <div class="col-xs-12"><hr/></div>
            @if (Model.Images.Capacity > 0)
            {
                foreach (var img in Model.Images)
                {
                    <div class="col-md-9 gallery">

                        <img id="user_img" class="img-circle image gallery-img"
                             src="data:image/png;base64, @Convert.ToBase64String(img.Data)"/>

                    </div>
                }
            }
            <div class="col-xs-12"><hr /></div>
        </div>
       
    </div>

</div>
