@model network.BLL.EF.Photoalbum

<div id="delDialog">
    <div class="modal-dialog">

        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                Delete
            </div>

            <div class="modal-body">
                @using (Html.BeginForm("Delete", "ImgAlbum", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-md-12">
                            Are you sure you want to delete this?
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">

                            <div class="col-md-offset-8 col-md-4 ">
                                <button type="submit" class="btn btn-info" style="margin: 15px">Delete</button>
                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>
    </div>
</div>










