@model  network.Views.ViewModels.AddPhotoViewModel
    

<div id="addPhotoDialog">
    <div class="modal-dialog ">
        <div class="modal-content">
            
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add photo</h4>
            </div>
            
            <div class="modal-body">
                @using (Html.BeginForm("AddPhoto", "ImgAlbum", FormMethod.Post, new {@enctype = "multipart/form-data",id=Model.Id}))
                {
                    @Html.HiddenFor(m=>m.Id)
                    <label class="btn btn-file">
                        <input type="file" name="Image" id="imageFile"/>
                    </label>

                    <button class="btn btn-info pull-right" type="submit" id="changePhoto">OK</button>
                    }
            </div>

        </div>
    </div>
</div>


  