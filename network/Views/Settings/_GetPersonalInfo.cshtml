@model BLL.ViewModels.PersonalInfoViewModel

<div class="container">
    <div class="page">Edit Profile</div>
    <hr>

    <div class="row">
              
            <form class="form-horizontal" role="form" action="@Url.Action("EditPersInfo","Settings")">
                @Html.HiddenFor(x => x.Id)
                @Html.HiddenFor(x => x.ImageId)
                <div class="col-md-9 personal-info">
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Gender:</label>
                        <div class="col-lg-5 gender">
                            <p> @Html.RadioButtonFor(x => x.Gender, "Male") male   @Html.RadioButtonFor(x => x.Gender, "Female") female  </p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">First name:</label>
                        <div class="col-lg-5">
                           @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Last name:</label>
                        <div class="col-lg-5">
                            @Html.EditorFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">Date of birthday:</label>
                        <div class="col-lg-5">
                            <input id="datepickerBirth" class="form-control" name="DateOfBirthday" type="date" value="@string.Format("{0:yyyy-MM-dd}",Model.DateOfBirthday)">
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-lg-3 control-label">Family status:</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.SelectedStatus, new SelectList(Model.FamilyStatus,"Id","Name"), Model.SelectedStatus)
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-8">
                            <input type="submit" class="btn" value="Save changes">
                            <span></span>
                            <input type="reset" class="btn btn-default" value="Cancel">
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>

<script type="text/javascript">

</script>


