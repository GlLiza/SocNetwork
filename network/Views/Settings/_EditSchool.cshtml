@model IEnumerable<DAL.EF.School>

<div class="container">
    <div class="page">Edit school's information</div>
    <hr>

    <div class="row">
        <form class="form-horizontal" role="form" action="@Url.Action("EditSchoolInfo", "Settings",new { model=Model})">
            @foreach (var item in Model)
            {
                <div class="form-group">
                    <label class="col-lg-3 control-label">Name of school:</label>
                    <div class="col-lg-5">
                        @Html.EditorFor(modelItem => item.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(modelItem => item.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-3 control-label">Start year:</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => item.StartYear, new SelectList(Enumerable.Range(1970, Convert.ToInt32(DateTime.Now.Year - 1970 + 1)).Reverse()), item.StartYear)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-3 control-label">Last year:</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => item.GraduationYear, new SelectList(Enumerable.Range(1970, Convert.ToInt32(DateTime.Now.Year - 1970 + 1)).Reverse()), item.GraduationYear)
                    </div>
                </div>
                <hr/>
            }
            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-8">
                    <input type="submit" class="btn" value="Save changes">
                    <span></span>
                    <input type="reset" class="btn btn-default" value="Cancel">
                </div>
            </div>
        </form>
    </div>
</div>
