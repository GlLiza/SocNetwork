@model DAL.EF.School


<div class="container">
    <div class="page">Add new school</div>
    <hr>


    <div class="row">
        <form class="form-horizontal" role="form" action="@Url.Action("AddNewSchool","Settings")">

            <div class="form-group">
                <label class="col-lg-3 control-label">School name:</label>
                <div class="col-lg-5">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 control-label">Start year:</label>
                <div class="col-lg-5">
                    @Html.DropDownListFor(model => model.StartYear, Enumerable.Range(1970, DateTime.Now.Year - 1970 + 1).Reverse().Select(x => new SelectListItem() { Value = x.ToString(), Text = x.ToString() }), "Please select")
                    @Html.ValidationMessageFor(model => model.StartYear, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 control-label">Graduation year:</label>
                <div class="col-lg-5">
                    @Html.DropDownListFor(model => model.GraduationYear, Enumerable.Range(1970, DateTime.Now.Year - 1970 + 1).Reverse().Select(x => new SelectListItem() { Value = x.ToString(), Text = x.ToString()}), "Please select")
                    @Html.ValidationMessageFor(model => model.GraduationYear, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-8">
                    <input type="submit" class="btn" value="Save changes">
                    <span></span>
                    <input type="reset" class="btn btn-default" value="Cancel">
                </div>
            </div>

        </form>
    </div>
</div>

