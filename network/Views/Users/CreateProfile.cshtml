@using network.DAL.Enums
@model network.Views.ViewModels.CreateUserViewModel

@{
    ViewBag.Title = "CreateProfile";
    Layout = "~/Views/Shared/_LayoutCreate.cshtml";
}

<h2>CreateProfile</h2>

@using (Html.BeginForm("CreateProfile", "Users", FormMethod.Post, new { id = Model.Id, enctype = "multipart/form-data" }))
{

    <div class="form-horizontal">
        @*@Html.AntiForgeryToken()*@

        <div class="container">

            <div class="stepwizard col-md-offset-3">
                <div class="stepwizard-row setup-panel">
                    <div class="stepwizard-step">
                        <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
                        <p>Step 1</p>
                    </div>
                    <div class="stepwizard-step">
                        <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
                        <p>Step 2</p>
                    </div>
                    <div class="stepwizard-step">
                        <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
                        <p>Step 3</p>
                    </div>
                    <div class="stepwizard-step">
                        <a href="#step-4" type="button" class="btn btn-default btn-circle" disabled="disabled">4</a>
                        <p>Step 4</p>
                    </div>
                    <div class="stepwizard-step">
                        <a href="#step-5" type="button" class="btn btn-default btn-circle" disabled="disabled">5</a>
                        <p>Step 5</p>
                    </div>

                </div>
            </div>

            <div class="row" id="step-1">
                <div class="col-xs-6 col-md-offset-3">
                    <div class="col-md-12">
                        <h3> Step 1</h3>

                        <div class="row">
                            <div class="col-md-4">
                                <label class="control-label">Select gender </label>
                            </div>
                            <div class="col-md-8">
                                <div class="col-md-4">
                                    @Html.RadioButtonFor(x => x.Gender, Gender.Male) Male
                                </div>
                                <div class="col-md-8">
                                    @Html.RadioButtonFor(x => x.Gender, Gender.Female) Female
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">First Name</label>
                            <input maxlength="100" name="Name" type="text" required="required" class="form-control" placeholder="Enter First Name" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Last Name</label>
                            <input maxlength="100" name="Firstname" type="text" required="required" class="form-control" placeholder="Enter Last Name" />
                        </div>
                        
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-4">
                                    <label class="control-label"> Select photo </label>
                                </div>
                                <div class="col-md-8">
                                    <label class="btn">
                                        <input type="file" name="Image"/>
                                    </label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="col-md-4">
                                <label class="control-label">Date of birthday</label>
                            </div>
                            <div class="col-md-8">
                                <input type="date" name="DateOfBirthday" id="bdaytime">
                                </div>

                        </div>

                        <div class="form-group">
                            <div class="col-md-4">
                                <label class="control-label">Select status </label>
                            </div>

                            @Html.DropDownListFor(model=>model.SelectedStatus,new SelectList(Model.FamilyStatus, "Id","Name","--Select status--"))

                        </div>
                            <button class="btn btn-primary  btn-lg pull-right" type="button">Next</button>
                        </div>
                </div>
            </div>





            <div class="row setup-content" id="step-2">
                <div class="col-xs-6 col-md-offset-3">
                    <div class="col-md-12">
                        <h3> Step 2</h3>

                        <div class="form-group">
                            <label class="control-label">Home country</label>
                            <input maxlength="200" name="HomeCountry" type="text" required="required" class="form-control" placeholder="Enter homecountry" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Home state</label>
                            <input maxlength="200" name="HomeState" type="text" required="required" class="form-control" placeholder="Enter homestreet" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Home city</label>
                            <input maxlength="200" name="HomeCity" type="text" required="required" class="form-control" placeholder="Enter homecity" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Home street</label>
                            <input maxlength="200" name="HomeStreet" type="text" required="required" class="form-control" placeholder="Enter homestreet" />
                        </div>
                        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>


                    </div>
                </div>
            </div>





            <div class="row setup-content" id="step-3">
                <div class="col-xs-6 col-md-offset-3">
                    <div class="col-md-12">
                        <h3> Step 3</h3>
                        <div class="form-group">
                            <label class="control-label">School name</label>
                            <input maxlength="200" name="SchoolName" type="text" required="required" class="form-control" placeholder="Enter school name" />
                        </div>
                        @*<div class="form-group">
                            @*<label class="control-label">Graduation year:</label>*@
                        @*  @Html.LabelFor(model=>model.GraduationYear, "Graduation year",htmlAttributes:new {@class="control-label col-md-2"})
                                    @Html.DropDownListFor(model=>model.GraduationYear, Enumerable.Range(1970,DateTime.Now.Year-1970+1).Reverse().Select(x=>new SelectListItem(){Value=x.ToString(),Text = x.ToString()}))
                            </div>*@

                        <div class="form-group">
                            @Html.LabelFor(model => model.GraduationYear, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.GraduationYear, Enumerable.Range(1970, DateTime.Now.Year - 1970 + 1).Reverse().Select(x => new SelectListItem() { Value = x.ToString(), Text = x.ToString() }))
                                @*@Html.EditorFor(model => model.GraduationYear, new { htmlAttributes = new { @class = "form-control" } })*@
                                @Html.ValidationMessageFor(model => model.GraduationYear, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>
                    </div>
                </div>
            </div>

            <div class="row setup-content" id="step-4">
                <div class="col-xs-6 col-md-offset-3">
                    <div class="col-md-12">
                        <h3> Step 4</h3>
                        <div class="form-group">
                            <label class="control-label">Country</label>
                            <input maxlength="200" name="Country" type="text" required="required" class="form-control" placeholder="Enter country" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">State</label>
                            <input maxlength="200" name="State" type="text" required="required" class="form-control" placeholder="Enter state" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">City</label>
                            <input maxlength="200" name="City" type="text" required="required" class="form-control" placeholder="Enter city" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Street</label>
                            <input maxlength="200" name="Street" type="text" required="required" class="form-control" placeholder="Enter street" />
                        </div>
                        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>
                    </div>
                </div>
            </div>





            <div class="row setup-content" id="step-5">
                <div class="col-xs-6 col-md-offset-3">
                    <div class="col-md-12">
                        <h3> Step 5</h3>
                        <div class="form-group">
                            <label class="control-label">Company Name</label>
                            <input maxlength="200" name="CompanyName" type="text" required="required" class="form-control" placeholder="Enter Company Name" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Position</label>
                            <input maxlength="200" name="Position" type="text" required="required" class="form-control" placeholder="Enter position" />
                        </div>

                        <div class="form-group">
                            <label class="control-label">Start date</label>
                            <input type="date" name="StartDate" id="strtdate">
                        </div>

                        <div class="form-group">
                            <label class="control-label">End date</label>
                            <input type="date" id="enddate" name="EndDate">
                        </div>
                        <button class="btn btn-success btn-lg pull-right" type="submit">Save</button>

                    </div>
                </div>
            </div>



        </div>
    </div>
}

