@using network.DAL.Enums
@model network.Views.ViewModels.CreateUserViewModel

@{
    ViewBag.Title = "CreateProfile";
    Layout = "~/Views/Shared/_LayoutCreate.cshtml";
}

<h2>CreateProfile</h2>

@using (Html.BeginForm("CreateProfile", "Users", FormMethod.Post, new { id = Model.Id, enctype = "multipart/form-data" }))
{  
    <div class="form-horizontal">
        <div class="container">

            <div class="stepwizard col-md-offset-3">
                <div class="stepwizard-row setup-panel">
                    <div class="stepwizard-step">
                        <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
                        <p>Step 1</p>
                    </div>
                    <div class="stepwizard-step">
                        <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
                        <p>Step 2</p>
                    </div>
                    <div class="stepwizard-step">
                        <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
                        <p>Step 3</p>
                    </div>
                    <div class="stepwizard-step">
                        <a href="#step-4" type="button" class="btn btn-default btn-circle" disabled="disabled">4</a>
                        <p>Step 4</p>
                    </div>
                    <div class="stepwizard-step">
                        <a href="#step-5" type="button" class="btn btn-default btn-circle" disabled="disabled">5</a>
                        <p>Step 5</p>
                    </div>

                </div>
            </div>

    <div class="row setup-content" id="step-1">
        <div class="col-xs-6 col-md-offset-3">
            <div class="col-md-12">
                <h3> Step 1</h3>

                <div class="row">
                    <div class="col-md-4">
                        <label class="control-label">Select gender </label>
                    </div>
                    <div class="col-md-8">
                        <div class="col-md-4">
                            @Html.RadioButtonFor(x => x.Gender, Gender.Male) Male
                        </div>
                        <div class="col-md-8">
                            @Html.RadioButtonFor(x => x.Gender, Gender.Female) Female
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">First Name</label>
                    <input maxlength="100" name="Name" type="text" required="required" class="form-control" placeholder="Enter First Name" />
                </div>
                <div class="form-group">
                    <label class="control-label">Last Name</label>
                    <input maxlength="100" name="Firstname" type="text" required="required" class="form-control" placeholder="Enter Last Name" />
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label class="control-label"> Select photo </label>
                        </div>
                        <div class="col-md-8">
                            <label class="btn">
                                <input type="file" name="Image" />
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        <label class="control-label">Date of birthday</label>
                    </div>
                    <div class="col-md-8">
                        <input type="date" name="DateOfBirthday" id="bdaytime" lang="en-us">
                    </div>

                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        <label class="control-label">Select status </label>
                    </div>

                    @Html.DropDownListFor(model => model.SelectedStatus, new SelectList(Model.FamilyStatus, "Id", "Name"), "Choose you family status...")

                </div>
                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>
            </div>
        </div>
    </div>





    <div class="row setup-content" id="step-2">
        <div class="col-xs-6 col-md-offset-3">
            <div class="col-md-12">
                <h3> Step 2</h3>

                <div class="form-group">

                    <div id="hcountry">
                        <label class="control-label">Home country</label>
                        <div id="select">
                            @Html.DropDownListFor(x => x.HomeCountry, new SelectList(Model.ListOfCountry, "Id", "Name"), "Choose your home country...")
                        </div>
                    </div>
                    @*<div id="hcity" class="form-group hidden" >
                        <label class="control-label">Home city</label>
                        <input maxlength="200" name="HomeCity" type="text" required="required" class="form-control" placeholder="Enter homecity" />

                    </div>*@
                    <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row setup-content" id="step-3">
        <div class="col-xs-6 col-md-offset-3">
            <div class="col-md-12">
                <h3> Step 3</h3>
                <div class="form-group">
                    <label class="control-label">School name</label>
                    <input maxlength="200" name="SchoolName" type="text" required="required" class="form-control" placeholder="Enter school name" />
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.GraduationYear)
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.GraduationYear, Enumerable.Range(1970, DateTime.Now.Year - 1970 + 1).Reverse().Select(x => new SelectListItem() { Value = x.ToString(), Text = x.ToString() }), "--Choose year of graduation--")
                    </div>
                </div>

                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>
            </div>
        </div>
    </div>

            <div class="row setup-content" id="step-4">
                <div class="col-xs-6 col-md-offset-3">
                    <div class="col-md-12">
                        <h3> Step 4</h3>
                        <div class="form-group">
                            <label class="control-label">Current country</label>

                            <div id="select">
                                @Html.DropDownListFor(x => x.Country, new SelectList(Model.ListOfCountry, "Id", "Name"), "Choose your home country...")
                            </div>
                            <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>
                        </div>
                    </div>
                </div>
            </div>



    <div class="row setup-content" id="step-5">
        <div class="col-xs-6 col-md-offset-3">
            <div class="col-md-12">
                <h3> Step 5</h3>
                <div class="form-group">
                    <label class="control-label">Company Name</label>
                    <input maxlength="200" name="CompanyName" type="text" required="required" class="form-control" placeholder="Enter Company Name" />
                </div>
                <div class="form-group">
                    <label class="control-label">Position</label>
                    <input maxlength="200" name="Position" type="text" required="required" class="form-control" placeholder="Enter position" />
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.WorkPeriod.StartMonth)


                    <div class="col-md-8">
                        @Html.DropDownListFor(model=>model.WorkPeriod.StartMonth, new SelectList(Model.MonthList), "--Choose month--")
                    </div>

                    @Html.LabelFor(model => model.WorkPeriod.StartYear)
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.WorkPeriod.StartYear, Enumerable.Range(1970, DateTime.Now.Year - 1970 + 1).Reverse().Select(x => new SelectListItem() { Value = x.ToString(), Text = x.ToString() }), "--Choose year--")
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.WorkPeriod.EndMonth)
                    <div class="col-md-8">
                        @Html.DropDownListFor(model=>model.WorkPeriod.EndMonth,new SelectList(Model.MonthList), "--Choose month--")
                        </div >

                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.WorkPeriod.EndYear, Enumerable.Range(1970, DateTime.Now.Year - 1970 + 1).Reverse().Select(x => new SelectListItem() { Value = x.ToString(), Text = x.ToString() }), "--Choose year--")
                    </div>
                </div>

                            @*<div class="form-group">

                            @Html.TextBoxFor(model=>model.StartDate, new { @class="month-picker"})

                            <label class="control-label">Start date</label>

                            @Html.DropDownListFor(model => model.StartDate, Enumerable.Range(0,DateTime.Now.Month).Reverse().Select(x=>new SelectListItem() { Value=x.ToString(),Text=x.ToString()}),Enumerable.Range(1970, DateTime.Now.Year - 1970 + 1).Reverse().Select(x => new SelectListItem() { Value = x.ToString(), Text = x.ToString() }))

                            @Html.DropDownList("ExpirationMonth",ExpirationMonthDropdown

                            @Html.DropDownList("month",Enumerable.Range(1,12).Select(i=>new SelectListItem { Value=i.ToString()}),"--MONTH--")*@
                            @*<input type="date" name="StartDate" id="strtdate">
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.EndDate, new { @class = "month-picker" })
                                @*<input type="date" id="enddate" name="EndDate">*@
                    </div>
                    <button class="btn btn-success btn-lg pull-right" type="submit">Save</button>

                </div>
            </div>
        </div>



    </div>
        
}



