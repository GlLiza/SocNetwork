            </td>*@

            @*<td>
                @Html.ActionLink("Friends", "Index", "Friendship", new {id = item.User.Id}, null)
            </td>*@
            <td>

            <td>
                <div class="btn-group">
                    <button class="btn">...</button>
                    <button class="btn dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
                    <ul class="dropdown-menu">
                        <li><a href="#">Show friends</a></li>
                        <li>@Html.ActionLink("Add to friends", "SendRequest", "Friendship", new { id = item.User.Id }, null)</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Remove", "Delete", new {id = item.Id})</li>
                        
                        @*<li>@Html.ActionLink("Edit profile", "Edit", new {id = item.Id})</li>*@
