@model network.Views.ViewModels.ChangePhotoViewModel

<div id="changePhotoDialog">
    <div class="modal-dialog modal-sm">

        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Change profile photo</h4>
            </div>

            <div class="modal-body">
                @using (Html.BeginForm("ChangePhoto", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(m => m.Id)
                    <label class="btn btn-info btn-file">
                        Select photo <input type="file" name="Image" id="imageFile" />
                    </label>

                    <button class="btn btn-success pull-right" type="submit" id="changePhoto"> Change photo</button>

                    <div id="progressbar" class="progress-bar">
                        <div id="progresslabel" class="progressbarlabel"></div>
                    </div>

                }
                    </div>


        </div>

    </div>
</div>


