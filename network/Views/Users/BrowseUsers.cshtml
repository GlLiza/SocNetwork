@model IEnumerable<network.Views.ViewModels.ShowUserViewModel>


<table class="table">

@foreach (var item in Model) {
    <tr>
        <td>
            <div class="col-lg-9">
                <img id="user_img"
                     style="border: solid" src="data:image/png;base64, @Convert.ToBase64String(item.Image)"
                     class="img-circle" />
            </div>
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Name)
            @Html.DisplayFor(modelItem => item.Firstname)
        </td>
        
        <td>
            <div class="btn-group">
                <button class="btn">...</button>
                <button class="btn dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <li>@Html.ActionLink("Add to friends","SendRequest","Friendship", new { id = item.User.Id },null)</li>

                </ul>
            </div>
        </td>

    </tr>
}

</table>
