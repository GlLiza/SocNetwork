@using network.Controllers
@model IEnumerable<network.Views.ViewModels.ShowUserViewModel>


       @ViewData["Error"]

@{
    FriendshipController f=new FriendshipController();
}



<table class="table">

@foreach (var item in Model) {
    <tr>
        <td>
            <div class="col-lg-9">
                <img id="user_img"
                     style="border: solid" src="data:image/png;base64, @Convert.ToBase64String(item.Image)"
                     class="img-circle" />
            </div>
        </td>

        <td>
            <a href="@Url.Action("UsersPage","Users", new {id=item.Id},null)">
            @Html.DisplayFor(modelItem => item.Name)
            @Html.DisplayFor(modelItem => item.Firstname)
                </a>
        </td>
        
        <td>
            <div class="btn-group">
                <button class="btn">...</button>
                <button class="btn dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
                <ul class="dropdown-menu">
                    
                    
                    @*@{
                        if (f.CheckRequest(item.User.Id) == false)

                        {*@
                            <a href="@Url.Action("SendRequest", "Friendship", new {id = item.User.Id})">Add to friends</a>
                        @*}
                    }*@

                  
                </ul>
            </div>
        </td>

    </tr>
}

</table>
