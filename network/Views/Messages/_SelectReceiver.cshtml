@model network.Views.ViewModels.SelectReceiver
    

<div id="selectReceiverDialog">
    <div class="modal-dialog">
        <div class="modal-content">
             
            <div class="modal-header navbar-inverse">
                <button type="button" class="close"  data-dismiss="modal">&times;</button>
                <h4 class="modal-title header">Select friend</h4>
            </div>
            
            <div class="modal-body">
                
                <table class="table">
                    
                    @using (Html.BeginForm("SelectReceiver", "Messages", FormMethod.Post, null))
                    {
                        if (Model.FriendsList != null)
                        {
                            <div class="scrolSelRec style="display: inline-flex">
                            <hr />
                            @foreach (var friend in Model.FriendsList)
                            {
                                <a href="#">
                                    <div class="row  .content_for_friends " id="beginChat">
                                        <div class="text">
                                            <img class="select_friend_img" src="data:image/png;base64, @Convert.ToBase64String(friend.Image)">

                                            @Html.DisplayFor(modelItem => friend.Name)
                                            @Html.DisplayFor(modelItem => friend.FirstName)
                                        </div>
                                    </div>
                                    </a>
                                <hr/>
                            }
                                </div>
                        }
                    }
                </table>
            </div>

            </div>
        </div>
</div>

