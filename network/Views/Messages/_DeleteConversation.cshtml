@model network.BLL.EF.Conversation

<div id="delGroupDialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete conversation</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("DeleteConversation", "Messages", FormMethod.Post))
                {
                    @Html.HiddenFor(model => model.Id)
                    <p>Are you sure you want to delete this conversation?</p>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-offset-8 col-md-4 ">
                                <button type="submit" class="btn" style="margin: 15px">OK</button>
                            </div>
                        </div>
                    </div>     }
            </div>
        </div>
    </div>
</div>
