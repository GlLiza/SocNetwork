@using network.Controllers
@model IEnumerable<network.Views.ViewModels.NewRequestsViewModel>

@*@{var c = new FriendshipController();}*@




<table class="table">
   
    @foreach (var item in Model) {
        <tr>
            <td>
                @if (item.Image.Length != 0)

                {
                    <div class="col-lg-9">
                        <img id="user_img"
                             style="border: solid" src="data:image/png;base64, @Convert.ToBase64String(item.Image)"
                             class="img-circle" />
                    </div>
                }
            </td>
            <td>
                <a href="@Url.Action("UsersPage","Users",new { id=item.Id},null)">
                @Html.DisplayFor(modelItem => item.Name)
                @Html.DisplayFor(modelItem => item.Firstname)
                    </a>
            </td>
        
            <td>
                <div class="btn-group">
                    <button class="btn">...</button>
                    <button class="btn dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
                    <ul class="dropdown-menu">
              
                    <li>@Html.ActionLink("Accept", "AcceptRequest", "Friendship", new {requestsId = item.Requests.Id}, null)</li>
                    <li>@Html.ActionLink("Ignore", "IgnoreRequest", "Friendship", new {id = item.Requests.Id}, null)</li>
                    <li>@Html.ActionLink("Rejectr", "RejectrRequest", "Friendship", new {id = item.Requests.Id}, null)</li>

                    </ul>
                </div>
            </td>

        </tr>
    }

</table>

