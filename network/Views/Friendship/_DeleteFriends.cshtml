@model string

<div id="changePhotoDialog">
    <div class="modal-dialog modal-sm">

        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete  friend</h4>
            </div>

            <div class="modal-body">
                @using (Html.BeginForm("Delete", "Friendship", new { Id = Model }))
                {
                <p>Are you sure that you want to delete this user from friends?</p>
                    <button class="btn btn-success pull-right" type="submit" id="removeFriend"> Remove from friends</button>
                }
            </div>


        </div>

    </div>
</div>



